<PasswordTesterLayout>
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        Label:
            text: "Password Tester"
            font_size: "28sp"
            bold: True
            size_hint_y: 0.1

        Label:
            text: "Password criteria:"
            font_size: "20sp"
            bold: True
            size_hint_y: 0.06

        GridLayout:
            cols: 2
            spacing: dp(5)
            size_hint_y: 0.15
            size_hint_x: 0.3
            pos_hint: {"center_x": 0.45}

            Label:
                text: "Has numbers:"
                halign: "right"
                size_hint_x: 0.7
            CustomSwitch:
                id: has_numbers

            Label:
                text: "Has uppercase:"
                halign: "right"
                size_hint_x: 0.7
            CustomSwitch:
                id: has_uppercase

            Label:
                text: "Has lowercase:"
                halign: "right"
                size_hint_x: 0.7
            CustomSwitch:
                id: has_lowercase

            Label:
                text: "Has special chars:"
                halign: "right"
                size_hint_x: 0.7
            CustomSwitch:
                id: has_special_chars

        Widget:
            size_hint_y: 0.1

        BoxLayout:
            spacing: dp(5)
            size_hint_y: 0.08
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.5}

            Label:
                text: "Hash password:"
                size_hint_x: 0.6
            CustomSwitch:
                id: hash_password
                active: False
            Spinner:
                id: hash_method
                text: "Select Hashing Method"
                values: ["MD5", "SHA-1", "SHA-256", "SHA-512"]
                size_hint_x: 0.3
                text_size: self.size
                font_size: "14sp"
                halign: "center"
                valign: "middle"

        Spinner:
            id: attack_method
            text: "Select Attack Method"
            values: ["Brute Force", "Dictionary", "Combined"]
            size_hint_y: 0.08

        TextInput:
            id: password_input
            hint_text: "Password to test"
            multiline: False
            size_hint_y: 0.08

        Button:
            text: "START"
            size_hint_y: 0.08
            background_color: 0, 0.8, 0.7, 1
            on_press: app.start_test()

        Label:
            text: "Passwords tested:"
            font_size: "18sp"
            size_hint_y: 0.06

        Label:
            id: tested_count
            text: "0"
            font_size: "22sp"
            bold: True
            size_hint_y: 0.06

        Label:
            id: tested_password
            text: "----"
            font_size: "22sp"
            bold: True
            size_hint_y: 0.06

        Label:
            text: "Time elapsed:"
            font_size: "18sp"
            size_hint_y: 0.06

        Label:
            id: elapsed_time
            text: "0:00:00.000000"
            font_size: "22sp"
            bold: True
            size_hint_y: 0.06
