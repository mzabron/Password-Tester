<PasswordTesterController>
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        Label:
            text: "Password Tester"
            font_size: "28sp"
            bold: True
            size_hint_y: 0.1

        Label:
            text: "Password criteria:"
            font_size: "20sp"
            bold: True
            size_hint_y: 0.06

        GridLayout:
            cols: 2
            spacing: dp(10)
            size_hint_y: 0.2
            size_hint_x: 0.6
            pos_hint: {"center_x": 0.5}

            Label:
                text: "Has numbers:"
                font_size: "20sp"
                halign: "right"
                valign: "center"
                size_hint_x: 0.7
            CustomSwitch:
                id: has_numbers
                size_hint: (0.2, 0.2)
                pos_hint: {"center_y": 0.55}
                on_active: root.update_criteria()

            Label:
                text: "Has uppercase:"
                font_size: "20sp"
                halign: "right"
                valign: "center"
                size_hint_x: 0.7
            CustomSwitch:
                id: has_uppercase
                size_hint: (0.2, 0.2)
                pos_hint: {"center_y": 0.55}
                on_active: root.update_criteria()

            Label:
                text: "Has lowercase:"
                font_size: "20sp"
                halign: "right"
                valign: "center"
                size_hint_x: 0.7
            CustomSwitch:
                id: has_lowercase
                size_hint: (0.2, 0.2)
                pos_hint: {"center_y": 0.55}
                on_active: root.update_criteria()

            Label:
                text: "Has special chars:"
                font_size: "20sp"
                halign: "right"
                valign: "center"
                size_hint_x: 0.7
            CustomSwitch:
                id: has_special_chars
                size_hint: (0.2, 0.2)
                pos_hint: {"center_y": 0.55}
                on_active: root.update_criteria()

        Widget:
            size_hint_y: 0.01

        Spinner:
            id: attack_method
            text: "Select Attack Method"
            values: ["Brute Force", "Dictionary", "Combined"]
            size_hint_y: 0.08
            on_text: root.update_attack_method(self.text)

        TextInput:
            id: password_input
            hint_text: "Password to test"
            multiline: False
            size_hint_y: 0.08

        Button:
            text: "START"
            size_hint_y: 0.08
            background_color: 0, 0.8, 0.7, 1
            on_press: root.start_test()

        Button:
            id: cancel_button
            text: "CANCEL"
            size_hint_y: 0.08
            background_color: 0.8, 0, 0, 1
            on_press: root.cancel_test()
            disabled: True

        Label:
            text: "Passwords tested:"
            font_size: "18sp"
            size_hint_y: 0.06

        Label:
            id: tested_count
            text: "0"
            font_size: "22sp"
            bold: True
            size_hint_y: 0.06

        Label:
            id: tested_password
            text: "----"
            font_size: "22sp"
            bold: True
            size_hint_y: 0.06

        Label:
            text: "Time elapsed:"
            font_size: "18sp"
            size_hint_y: 0.06

        Label:
            id: elapsed_time
            text: "0:00:00:00"
            font_size: "22sp"
            bold: True
            size_hint_y: 0.06
